# Discord bot token (required)
DISCORD_TOKEN=your_discord_bot_token_here

# OpenAI API key (optional for AI replies)
OPENAI_API_KEY=your_openai_api_key_here

# Optional model override
OPENAI_MODEL=gpt-4

# Optional: path to ffmpeg binary (use if ffmpeg is not on PATH)
# Example (Windows): C:\ffmpeg\bin\ffmpeg.exe
FFMPEG_PATH=

# Optional: Config API for the web UI
# Set CONFIG_API_HOST=0.0.0.0 if the bot runs elsewhere and you want to access it remotely
CONFIG_API_ENABLED=false
CONFIG_API_HOST=127.0.0.1
CONFIG_API_PORT=8080
# Optional token for API requests (recommended if exposed beyond localhost)
CONFIG_API_TOKEN=
